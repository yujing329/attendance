<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>   <!-- 7.31: flash変数の内容をWebサイトのレイアウトに追加 -->
        <!--7.35: content_tagを使ってレイアウトの中にflashを埋め込む -->
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>   <!--7.1: サイトのレイアウトにデバッグ情報を追加-->
    </div>
  </body>
</html>