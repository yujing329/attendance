<% provide(:title, 'ユーザーリスト') %>
<h1>ユーザーリスト</h1>

<div class="row">
  <h3>人数は<%= @users.count %>人です</h3>

    <%= will_paginate %>
    
  <!--  検索拡張機能  -->
  <div class="search">
    <p>ユーザ検索 ※ブランクで検索すると全員表示です</p>
    <%= form_tag(users_path, :method => 'get' ) do %>
    <div class="field">
      <%= text_field_tag :search %>
    </div>
      <%= submit_tag '検索', :name => nil, class: "shbtn" %>
    <% end %>
  </div>

  <ul class="users">
    <%= render @users %>
  </ul>
  
  <%= will_paginate %>
</div>